{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": ["config:best-practices"],
  "labels": ["dependencies"],
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "minimumReleaseAge": "5 days",
  "updateNotScheduled": false,
  "schedule": [
    "after 8pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "MAJOR"]
    },
    {
      "groupName": "formkit-packages",
      "matchPackagePatterns": ["^@formkit/"]
    },
    {
      "groupName": "kotlin-packages",
      "matchPackagePatterns": ["detekt","kotlin"],
      "matchSourceUrls": ["https://github.com/JetBrains/kotlin"]
    },
    {
      "groupName": "cloudevents",
      "matchPackagePatterns": ["cloudevents"]
    }
  ],
  "gradle" : {
    "fileMatch": ["^versions.properties$"]
  }
}
