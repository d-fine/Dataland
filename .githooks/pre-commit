#!/bin/sh
set -euxo pipefail
######## KTLINT-GRADLE HOOK START ########

EDIT_FILES="$(git --no-pager diff --name-status --no-color --cached | awk '$1 != "D" && $2 ~ /\.kts|\.kt/ { print $2}')"

if [ -z "$EDIT_FILES" ]; then
    echo "No Kotlin staged files."
    exit 0
fi;

echo "Running ktlint over these files:"
echo "$EDIT_FILES"

./gradlew --quiet ktlintFormat -PinternalKtlintGitFilter="$EDIT_FILES"

echo "Completed ktlint run."

echo "$EDIT_FILES" | while read -r file; do
    if [ -f $file ]; then
        git add $file
    fi
done

echo "Completed ktlint hook."
######## KTLINT-GRADLE HOOK END ########
######## KTLINT-DETEKT HOOK ############
echo "Starting detekt hook"
./gradlew detekt -PinternalKtlintGitFilter="$EDIT_FILES"