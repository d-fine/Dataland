{
  "$id": "http://localhost:8081/ceo.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CEO framework",
  "description": "The CEO framework describing the CEO of a company.",
  "properties": {
    "name": {
      "$ref": "http://localhost:8081/name.json"
    },
    "age": {
      "$ref": "http://localhost:8081/age.json"
    },
    "drivingLicence": {
      "$ref": "http://localhost:8081/yesNoNaDatapoint.json"
    }
  },
  "required": [
    "name"
  ],
  "if": {
    "properties": {
      "drivingLicence": { "value": "Yes" }
    }
  },
  "then": {
    "properties": {
      "favoriteBrand": { "type": "string" }
    }
  },
  "else": {
    "properties": {
      "favoriteBrand": { "type": "null" }
    }
  },
  "unevaluatedProperties": false
}
