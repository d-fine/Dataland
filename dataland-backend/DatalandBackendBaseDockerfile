ARG DATALAND_GRADLE_BASE_VERSION
FROM ghcr.io/d-fine/dataland/dataland_gradle_base:${DATALAND_GRADLE_BASE_VERSION} as builder
ARG GITHUB_USER
ARG GITHUB_TOKEN

WORKDIR /app
COPY ./dataland-backend/ ./dataland-backend/
COPY ./.git/ ./.git
RUN GITHUB_USER=$GITHUB_USER GITHUB_TOKEN=$GITHUB_TOKEN ./gradlew dataland-backend:bootJar --no-daemon --stacktrace
