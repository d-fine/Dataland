{
  "openapi": "3.0.1",
  "info": {
    "title": "Dataland User Service API documentation",
    "description": "Manage User Portfolios and more",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/users"
    }
  ],
  "tags": [
    {
      "name": "Actuator",
      "description": "Monitor and interact",
      "externalDocs": {
        "description": "Spring Boot Actuator Web API Documentation",
        "url": "https://docs.spring.io/spring-boot/docs/current/actuator-api/html/"
      }
    }
  ],
  "paths": {
    "/portfolios/{portfolioId}/": {
      "get": {
        "tags": [
          "portfolio-controller"
        ],
        "summary": "Get portfolio by portfolioId.",
        "operationId": "getPortfolio",
        "parameters": [
          {
            "name": "portfolioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved portfolios.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BasePortfolio"
                }
              }
            }
          },
          "default": {
            "description": "An error occurred",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {
              "WWW-Authenticate": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "security": [
          {
            "default-oauth": []
          },
          {
            "default-bearer-auth": []
          }
        ]
      },
      "put": {
        "tags": [
          "portfolio-controller"
        ],
        "summary": "Replace an existing portfolio.",
        "description": "Replace the existing portfolio with given portfolioId entirely",
        "operationId": "replacePortfolio",
        "parameters": [
          {
            "name": "portfolioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PortfolioUpload"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully replaced existing portfolio.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BasePortfolio"
                }
              }
            }
          },
          "default": {
            "description": "An error occurred",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {
              "WWW-Authenticate": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "security": [
          {
            "default-oauth": []
          },
          {
            "default-bearer-auth": []
          }
        ]
      },
      "delete": {
        "tags": [
          "portfolio-controller"
        ],
        "summary": "Delete an existing portfolio.",
        "description": "Delete the portfolio with given portfolioId entirely",
        "operationId": "deletePortfolio",
        "parameters": [
          {
            "name": "portfolioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully deleted existing portfolio.",
            "content": {}
          },
          "default": {
            "description": "An error occurred",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {
              "WWW-Authenticate": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "security": [
          {
            "default-oauth": []
          },
          {
            "default-bearer-auth": []
          }
        ]
      }
    },
    "/portfolios/": {
      "get": {
        "tags": [
          "portfolio-controller"
        ],
        "summary": "Get all portfolios for the currently logged-in user.",
        "description": "All portfolios for the currently logged-in user are retrieved.",
        "operationId": "getAllPortfoliosForCurrentUser",
        "responses": {
          "200": {
            "description": "Successfully retrieved all portfolios.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BasePortfolio"
                  }
                }
              }
            }
          },
          "default": {
            "description": "An error occurred",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {
              "WWW-Authenticate": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "security": [
          {
            "default-oauth": []
          },
          {
            "default-bearer-auth": []
          }
        ]
      },
      "post": {
        "tags": [
          "portfolio-controller"
        ],
        "summary": "Post a new portfolio.",
        "operationId": "createPortfolio",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PortfolioUpload"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Successfully created a new portfolio.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BasePortfolio"
                }
              }
            }
          },
          "default": {
            "description": "An error occurred",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {
              "WWW-Authenticate": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "security": [
          {
            "default-oauth": []
          },
          {
            "default-bearer-auth": []
          }
        ]
      }
    },
    "/portfolios/{portfolioId}/enriched-portfolio": {
      "get": {
        "tags": [
          "portfolio-controller"
        ],
        "summary": "Get enriched portfolio by portfolioId.",
        "operationId": "getEnrichedPortfolio",
        "parameters": [
          {
            "name": "portfolioId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved portfolios.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EnrichedPortfolio"
                }
              }
            }
          },
          "default": {
            "description": "An error occurred",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {
              "WWW-Authenticate": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "security": [
          {
            "default-oauth": []
          },
          {
            "default-bearer-auth": []
          }
        ]
      }
    },
    "/portfolios/names": {
      "get": {
        "tags": [
          "portfolio-controller"
        ],
        "summary": "Get all portfolio names for the currently logged-in user.",
        "description": "All portfolio names for the currently logged-in user are retrieved.",
        "operationId": "getAllPortfolioNamesForCurrentUser",
        "responses": {
          "200": {
            "description": "Successfully retrieved all portfolio names.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BasePortfolioName"
                  }
                }
              }
            }
          },
          "default": {
            "description": "An error occurred",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {
              "WWW-Authenticate": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        },
        "security": [
          {
            "default-oauth": []
          },
          {
            "default-bearer-auth": []
          }
        ]
      }
    },
    "/actuator": {
      "get": {
        "tags": [
          "Actuator"
        ],
        "summary": "Actuator root web endpoint",
        "operationId": "links",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/vnd.spring-boot.actuator.v3+json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "additionalProperties": {
                      "$ref": "#/components/schemas/Link"
                    }
                  }
                }
              },
              "application/vnd.spring-boot.actuator.v2+json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "additionalProperties": {
                      "$ref": "#/components/schemas/Link"
                    }
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "object",
                    "additionalProperties": {
                      "$ref": "#/components/schemas/Link"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "An error occurred",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {
              "WWW-Authenticate": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/actuator/info": {
      "get": {
        "tags": [
          "Actuator"
        ],
        "summary": "Actuator web endpoint \u0027info\u0027",
        "operationId": "info",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/vnd.spring-boot.actuator.v3+json": {
                "schema": {
                  "type": "object"
                }
              },
              "application/vnd.spring-boot.actuator.v2+json": {
                "schema": {
                  "type": "object"
                }
              },
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "default": {
            "description": "An error occurred",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {
              "WWW-Authenticate": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/actuator/health": {
      "get": {
        "tags": [
          "Actuator"
        ],
        "summary": "Actuator web endpoint \u0027health\u0027",
        "operationId": "health",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/vnd.spring-boot.actuator.v3+json": {
                "schema": {
                  "type": "object"
                }
              },
              "application/vnd.spring-boot.actuator.v2+json": {
                "schema": {
                  "type": "object"
                }
              },
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "default": {
            "description": "An error occurred",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "headers": {
              "WWW-Authenticate": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PortfolioUpload": {
        "required": [
          "companyIds",
          "frameworks",
          "portfolioName"
        ],
        "type": "object",
        "properties": {
          "portfolioName": {
            "type": "string"
          },
          "companyIds": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "frameworks": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "sfdr",
                "eutaxonomy-financials",
                "eutaxonomy-non-financials",
                "nuclear-and-gas",
                "p2p",
                "lksg",
                "additional-company-information",
                "vsme",
                "esg-datenkatalog",
                "heimathafen"
              ]
            }
          }
        }
      },
      "BasePortfolio": {
        "required": [
          "companyIds",
          "creationTimestamp",
          "frameworks",
          "lastUpdateTimestamp",
          "portfolioId",
          "portfolioName",
          "userId"
        ],
        "type": "object",
        "properties": {
          "portfolioId": {
            "type": "string"
          },
          "portfolioName": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "creationTimestamp": {
            "type": "integer",
            "format": "int64"
          },
          "lastUpdateTimestamp": {
            "type": "integer",
            "format": "int64"
          },
          "companyIds": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "frameworks": {
            "uniqueItems": true,
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "sfdr",
                "eutaxonomy-financials",
                "eutaxonomy-non-financials",
                "nuclear-and-gas",
                "p2p",
                "lksg",
                "additional-company-information",
                "vsme",
                "esg-datenkatalog",
                "heimathafen"
              ]
            }
          }
        }
      },
      "EnrichedPortfolio": {
        "required": [
          "entries",
          "portfolioId",
          "portfolioName",
          "userId"
        ],
        "type": "object",
        "properties": {
          "portfolioId": {
            "type": "string"
          },
          "portfolioName": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "entries": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/EnrichedPortfolioEntry"
            }
          }
        }
      },
      "EnrichedPortfolioEntry": {
        "required": [
          "companyCockpitRef",
          "companyId",
          "companyName",
          "countryCode"
        ],
        "type": "object",
        "properties": {
          "companyId": {
            "type": "string"
          },
          "companyName": {
            "type": "string"
          },
          "sector": {
            "type": "string"
          },
          "countryCode": {
            "type": "string"
          },
          "framework": {
            "type": "string"
          },
          "companyCockpitRef": {
            "type": "string"
          },
          "frameworkDataRef": {
            "type": "string"
          },
          "latestReportingPeriod": {
            "type": "string"
          }
        }
      },
      "BasePortfolioName": {
        "required": [
          "portfolioId",
          "portfolioName"
        ],
        "type": "object",
        "properties": {
          "portfolioId": {
            "type": "string"
          },
          "portfolioName": {
            "type": "string"
          }
        }
      },
      "Link": {
        "type": "object",
        "properties": {
          "href": {
            "type": "string"
          },
          "templated": {
            "type": "boolean"
          }
        }
      },
      "ErrorDetails": {
        "required": [
          "errorType",
          "httpStatus",
          "message",
          "summary"
        ],
        "type": "object",
        "properties": {
          "errorType": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "httpStatus": {
            "type": "number"
          },
          "metaInformation": {
            "type": "object"
          }
        }
      },
      "ErrorResponse": {
        "required": [
          "errors"
        ],
        "type": "object",
        "properties": {
          "errors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ErrorDetails"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "default-bearer-auth": {
        "type": "http",
        "in": "header",
        "scheme": "bearer"
      },
      "default-oauth": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "/keycloak/realms/datalandsecurity/protocol/openid-connect/auth",
            "tokenUrl": "/keycloak/realms/datalandsecurity/protocol/openid-connect/token",
            "scopes": {}
          }
        }
      }
    }
  }
}