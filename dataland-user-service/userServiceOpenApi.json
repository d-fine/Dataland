  "components": {
    "schemas": {
      "PortfolioUpload": {
        "required": [
          "companyIds",
          "isMonitored",
          "monitoredFrameworks",
          "portfolioName"
        ],
        "type": "object",
        "properties": {
          "portfolioName": {
            "type": "string",
            "description": "The name of the portfolio on Dataland.",
            "example": "My Portfolio"
          },
          "companyIds": {
            "minItems": 1,
            "uniqueItems": true,
            "type": "array",
            "description": "A list of company IDs that are contained in the portfolio.",
            "example": [
              "c9710c7b-9cd6-446b-85b0-3773d2aceb48"
            ],
            "items": {
              "type": "string"
            }
          },
          "isMonitored": {
            "type": "boolean",
            "description": "Boolean flag that indicates whether the portfolio is monitored."
          },
          "startingMonitoringPeriod": {
            "type": "string",
            "description": "The reporting period from which the companies in the portfolio are actively monitored for data updates.",
            "example": "2023"
          },
          "monitoredFrameworks": {
            "uniqueItems": true,
            "type": "array",
            "description": "A list of frameworks for which the companies in the portfolio are actively monitored.",
            "example": [
              "sfdr"
            ],
            "items": {
              "type": "string"
            }
          }
        }
      },
      "BasePortfolio": {
        "required": [
          "companyIds",
          "creationTimestamp",
          "isMonitored",
          "lastUpdateTimestamp",
          "monitoredFrameworks",
          "portfolioId",
          "portfolioName",
          "userId"
        ],
        "type": "object",
        "properties": {
          "portfolioId": {
            "type": "string",
            "description": "The unique identifier to identify the portfolio.",
            "example": "1e63a842-1e65-43ed-b78a-5e7cec155c28"
          },
          "portfolioName": {
            "type": "string",
            "description": "The name of the portfolio on Dataland.",
            "example": "My Portfolio"
          },
          "userId": {
            "type": "string",
            "description": "The user ID of the user who created the portfolio.",
            "example": "1e63a842-1e65-43ed-b78a-5e7cec155c28"
          },
          "creationTimestamp": {
            "type": "integer",
            "description": "The timestamp (epoch milliseconds) at which the portfolio was created.",
            "format": "int64",
            "example": 1751291891271
          },
          "lastUpdateTimestamp": {
            "type": "integer",
            "description": "The timestamp (epoch milliseconds) at which the portfolio was last updated.",
            "format": "int64",
            "example": 1751291891271
          },
          "companyIds": {
            "uniqueItems": true,
            "type": "array",
            "description": "A list of company IDs that are contained in the portfolio.",
            "example": [
              "c9710c7b-9cd6-446b-85b0-3773d2aceb48"
            ],
            "items": {
              "type": "string"
            }
          },
          "isMonitored": {
            "type": "boolean",
            "description": "Boolean flag that indicates whether the portfolio is monitored."
          },
          "startingMonitoringPeriod": {
            "type": "string",
            "description": "The reporting period from which the companies in the portfolio are actively monitored for data updates.",
            "example": "2023"
          },
          "monitoredFrameworks": {
            "uniqueItems": true,
            "type": "array",
            "description": "A list of frameworks for which the companies in the portfolio are actively monitored.",
            "example": [
              "sfdr"
            ],
            "items": {
              "type": "string"
            }
          }
        }
      },
      "SupportRequestData": {
        "required": [
          "message",
          "topic"
        ],
        "type": "object",
        "properties": {
          "topic": {
            "type": "string",
            "description": "The topic of the request for help.",
            "example": "Find company identifiers."
          },
          "message": {
