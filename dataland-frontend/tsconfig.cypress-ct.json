// Config file for Cypress component tests
{
  "extends": "./tsconfig.app.json",
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "build/clients/**/*",
    "tests/component/**/*",
    "tests/sharedUtils/**/*",
    "./custom-adjustments-for-cypress-ct-tsconfig.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["cypress"],
    "paths": {
      "@/*": ["./src/*"],
      "@clients/*": ["./build/clients/*"],
      "@ct/*": ["./tests/component/*"],
      "@sharedUtils/*": ["./tests/sharedUtils/*"]
    }
  }
}
