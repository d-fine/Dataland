// Config file for Cypress component tests
{
  "extends": "./tsconfig.app.json",
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "build/clients/**/*",
    "tests/component/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["cypress"],
    "paths": {
      "@/*": ["./src/*"],
      "@clients/*": ["./build/clients/*"],
      "@ct/*": ["./tests/component/*"]
    }
  }
}
