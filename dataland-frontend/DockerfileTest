# build stage
FROM ghcr.io/d-fine/dataland/cypressbase:latest as build-stage
ARG DATALAND_EDC_USER
ARG DATALAND_EDC_TOKEN
WORKDIR /app
COPY . .
RUN DATALAND_EDC_USER=${DATALAND_EDC_USER} \
    DATALAND_EDC_TOKEN=${DATALAND_EDC_TOKEN} \
    ./gradlew dataland-frontend:generateAPIClientFrontend dataland-frontend:npm_run_build --no-daemon --stacktrace
FROM nginx:stable-alpine as production-stage
COPY --from=build-stage /app/dataland-frontend/dist /usr/share/nginx/html
COPY ./dataland-frontend/default.conf /etc/nginx/conf.d/default.conf
COPY ./dataland-inbound-proxy/config/utils/defaultHeaders.conf /etc/nginx/utils/defaultHeaders.conf
CMD ["nginx", "-g", "daemon off;"]