          "company-data-controller"
        ],
        "summary": "Show all available companies.",
        "description": "Retrieves a list of all existing companies containing the ID and name respectively.",
        "operationId": "getAllCompanies",
        "responses": {
          "200": {
            "description": "Successfully retrieved list of companies.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CompanyMetaInformation"
