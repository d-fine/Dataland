        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successfully added company.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CompanyMetaInformation"
                }
              }
            }
          }
        }
      }
    },
    "/EU-Taxonomy/{companyId}": {
      "post": {
        "tags": [
          "eu-taxonomy-data-controller"
        ],
        "summary": "Upload new data set.",
        "description": "The uploaded data is added to the data store, the generated data id is returned.",
        "operationId": "postData",
        "parameters": [
          {
            "name": "companyId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
