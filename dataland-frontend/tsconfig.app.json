{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue", "build/clients/**/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["vite/client"],
    "baseUrl": ".",
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": ["./src/*"],
      "@clients/*": ["./build/clients/*"]
    }
  }
}
