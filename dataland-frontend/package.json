{
  "name": "dataland-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite --port 8090 --host",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lintci": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --max-warnings 0 --no-fix",
    "teste2e": "cypress open",
    "fakefixtures": "ts-node -P tsconfig.commonjs.json tests/e2e/fixtures/GenerateFakeFixtures.ts",
    "updatepackages": "npm-check-updates -u",
    "updatepackagelock": "npm update --save --include=dev && npm audit fix",
    "checkdependencies": "depcheck",
    "build": "vite build"
  },
  "dependencies": {
    "@formkit/themes": "^1.0.0-beta.10",
    "@formkit/vue": "^1.0.0-beta.10",
    "@ibm/plex": "^6.1.0",
    "axios": "^0.27.2",
    "json2csv": "^5.0.7",
    "keycloak-js": "^19.0.1",
    "material-icons": "^1.11.11",
    "primeflex": "^3.2.1",
    "primeicons": "^5.0.0",
    "primevue": "~3.15.0",
    "vue": "^3.2.39",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.10.0",
    "@faker-js/faker": "^7.5.0",
    "@jest/globals": "^29.0.2",
    "@types/node": "^18.7.16",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/eslint-config-typescript": "^11.0.1",
    "@vue/test-utils": "^2.0.2",
    "cypress": "^10.7.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.4.0",
    "git-commit-id": "^2.0.1",
    "mocha": "^10.0.0",
    "npm-check-updates": "^16.1.0",
    "sass": "^1.54.9",
    "vite": "^3.1.0"
  },
  "prettier": {
    "printWidth": 120
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "rules": {
      "prettier/prettier": "warn"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "nyc": {
    "report-dir": "coverage/e2e",
    "reporter": [
      "lcov",
      "json"
    ],
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/test.js",
      "**/*.stories.js",
      "**/stories.js",
      "src/main.ts",
      "src/components/helper/*"
    ]
  }
}
