{
  "name": "dataland-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vite preview --host --port 8090",
    "build": "run-p type-check build-only",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lintci": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --max-warnings 0 --no-fix",
    "teste2e": "cypress run --e2e --mode development --url https://dataland-local.duckdns.org",
    "testheadless": "cypress run --e2e --mode development --url https://dataland-local.duckdns.org --headless",
    "testpipeline": "cypress run --e2e --mode development --url https://dataland-local.duckdns.org --headless",
    "testdevelopment": "cypress run --e2e --mode development --url https://dev-dataland.duckdns.org --headless",
    "testpreview": "cypress run --e2e --mode development --url https://dataland.com --headless",
    "testunit": "cypress open --component",
    "testunitci": "cypress run --component --quiet --reporter spec",
    "fakefixtures": "ts-node -P tsconfig.commonjs.json tests/e2e/fixtures/GenerateFakeFixtures.ts",
    "updatepackages": "npm-check-updates -u",
    "updatepackagelock": "npm update --save --dev && npm audit fix",
    "checkdependencies": "depcheck --ignores='@vue/cli-plugin-*,@vue/vue3-jest,sass-loader,ts-jest'",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@formkit/themes": "^1.0.0-beta.10",
    "@formkit/vue": "^1.0.0-beta.10",
    "@ibm/plex": "^6.1.0",
    "axios": "^0.27.2",
    "json2csv": "^5.0.7",
    "keycloak-js": "^19.0.1",
    "material-icons": "^1.11.10",
    "primeflex": "^3.2.1",
    "primeicons": "^5.0.0",
    "primevue": "~3.15.0",
    "vue": "^3.2.37",
    "vue-router": "^4.1.4"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/node": "^16.11.47",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/tsconfig": "^0.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "start-server-and-test": "^1.14.0",
    "vite": "^3.0.4",
    "vue-tsc": "^0.39.5",
    "@cypress/code-coverage": "^3.10.0",
    "@faker-js/faker": "^7.4.0",
    "@jest/globals": "^27.5.1",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.0.2",
    "cypress": "^10.6.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.22.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.4.0",
    "git-commit-id": "^2.0.1",
    "mocha": "^10.0.0",
    "npm-check-updates": "^16.0.5",
    "sass-loader": "^13.0.2",
    "ts-node": "^10.9.1",
    "typescript": "~4.7.4"
  },
  "prettier": {
    "printWidth": 120
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "rules": {
      "prettier/prettier": "warn"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "nyc": {
    "report-dir": "coverage/e2e",
    "reporter": [
      "lcov",
      "json"
    ],
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/test.js",
      "**/*.stories.js",
      "**/stories.js",
      "src/main.ts",
      "src/components/helper/*"
    ]
  }
}
